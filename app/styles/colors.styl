// COLORS 
// ------

// Colors are handled by a series of transformations on the base brand color
// This is done by hand because SASS doesn't support variable interpolation inside of loops at this time
// Implemented in /styleguide/colors.html for refrence

$deepBlue=  #000063
$baseColor= $deepBlue

$blue-1  = darken($baseColor, 15)
$blue-2  = darken($baseColor, 10)
$blue-3  = darken($baseColor, 5)
$blue-4  = $baseColor
$blue-5  = lighten($baseColor, 10)
$blue-6  = lighten($baseColor, 25)
$blue-7  = lighten($baseColor, 45)
$blue-8  = lighten($baseColor, 60)
$blue-9  = lighten($baseColor, 72)
$blue-10 = lighten($baseColor, 77)

$tint-1  = desaturate($blue-1,  90%)
$tint-2  = desaturate($blue-2,  90%)
$tint-3  = desaturate($blue-3,  90%)
$tint-4  = desaturate($blue-4,  90%)
$tint-5  = desaturate($blue-5,  90%)
$tint-6  = desaturate($blue-6,  90%)
$tint-7  = desaturate($blue-7,  90%)
$tint-8  = desaturate($blue-8,  90%)
$tint-9  = desaturate($blue-9,  90%)
$tint-10 = desaturate($blue-10, 90%)

$grey-1  = desaturate($blue-1,  100%)
$grey-2  = desaturate($blue-2,  100%)
$grey-3  = desaturate($blue-3,  100%)
