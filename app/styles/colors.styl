$grey-6  = desaturate($blue-6,  100%)
$grey-7  = desaturate($blue-7,  100%)
$grey-8  = desaturate($blue-8,  100%)
$grey-9  = desaturate($blue-9,  100%)
$grey-10 = desaturate($blue-10, 100%)

$red-1  = hsl($blue-1) + 120deg
$red-2  = hsl($blue-2) + 120deg
$red-3  = hsl($blue-3) + 120deg
$red-4  = hsl($blue-4) + 120deg
