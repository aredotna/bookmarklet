@import "nib"
@import "variables"
@import "mixins"

// BUTTON STYLES
// -------------

// Shared colors for buttons and alerts
.btn {
  -webkit-font-smoothing: antialiased;

  // Set text color
  &.danger,
  &.danger:hover,
  &.success,
  &.success:hover,
  &.info,
  &.info:hover {
    text-shadow: 0 -1px 0 rgba(0,0,0,.25);
    color: #fff;
  }

  // Danger and error appear as red
  &.danger {
    gradientBar($red-5, darken($red-5, 5));
    font-weight: bold;
  }

  // Success appears as green
  &.success {
    gradientBar($green-5, darken($green-5, 5));
    color: #fff;
    text-shadow: 0 -1px 0 rgba(0,0,0,.25);
    font-weight: bold;
  }

  // Info appears as a neutral blue
  &.info {
    gradientBar($blue-5, darken($blue-5, 5));
  }

  // Primary Button Type
  &.primary {
    color: #fff;
    text-shadow: 0 -1px 0 rgba(0,0,0,.25);
    font-weight: bold;
    $shadow=inset 1px 1px 1px rgba(255,255,255,.2), inset -1px -1px 1px rgba(255,255,255,.2);
    box-shadow: $shadow;
    gradientBar($blue-5, darken($blue-5, 5));

    &:hover {
      gradientBar($deepBlue, darken($deepBlue, 5));
      background-position: 0 0;
      color: #fff;
    }

    &:active {
      gradientBar($blue-5, darken($blue-5, 5));
    }
  }

  &.dark {
    gradientBar($deepBlue, darken($deepBlue, 5));
    color: #fff;
    text-shadow: 0 -1px 0 rgba(0,0,0,.25);
    font-weight: bold;

    &:hover {
      gradientBar($blue-5, darken($blue-5, 5));
      background-position: 0 -15;
      color: #fff;
    }

    &:active {
      gradientBar($deepBlue, darken($deepBlue, 5));
    }
  }

  &.dark-red {
    gradientBar($red-5, darken($red-5, 5));
    color: #fff; 
    text-shadow: 0 -1px 0 rgba(0,0,0,.25);
    font-weight: bold;

    &:hover {
      background-position: 0 -15;
      color: #fff;
      gradientBar($red-5, darken($red-5, 5));
    }

    &:active {
      gradientBar($red-5, darken($red-5, 5));
    }
  }

  &.inverse {
    gradientBar($grey-5, darken($grey-5, 5));
    color: $grey-7;
    text-shadow: 0 -1px 0 rgba(0,0,0,.25);
    font-weight: bold;

    &:hover {
      gradientBar($grey-5, darken($grey-5, 5));
      color: $grey-8;
      background-position: 0 -15px;
    }
  }

  &.inverse-tint {
    gradientBar($tint-5, darken($tint-5, 5));
    color: $tint-7;
    text-shadow: 0 -1px 0 rgba(0,0,0,.25);
    font-weight: bold;

    &:hover {
      gradientBar($tint-5, darken($tint-5, 5));
      color: $tint-8;
      background-position: 0 -15px;
    }
  }
}

// Base .btn styles
.btn {
  display: inline-block;
  padding: 4px 9px 5px;
  font-size: $baseFontSize;
  line-height: normal;
  color: $textColor;
  gradientBar(#fff, $grey-10);
  border: 1px solid rgba(0,0,0,.075);
  border-bottom-color: rgba(0,0,0,.1);
  cursor: pointer;  
  // overrides for the context these are placed into
  font-family: $baseFontFamily !important;
  font-weight: normal;
  text-decoration: none !important;

  &:focus{
    outline: none;
  }

  &:hover {
    color: $darkGray;
    text-decoration: none;
    background-position: 0 -15px;
  }

  // Focus state for keyboard and accessibility
  // &:focus { outline: 1px dotted #666; }

  // Active and Disabled states
  &.active,
  &:active {
    background-image: none;
    $shadow=inset 0 1px 2px rgba(0,0,0,.15), 0 1px 2px rgba(0,0,0,.05);
    box-shadow: $shadow;
  }
  
  &.disabled {
    cursor: default;
    background-image: none;
    opacity: 0.65;
    box-shadow: none;

    &.outline:hover {
      border-color: rgba(0,0,0,.075); // Match
    }
  }

  &[disabled] {
    // disabled pseudo can't be included with .disabled
    // def because IE8 and below will drop it ;_;
    cursor: default;
    background-image: none;
    opacity: 0.65;
    box-shadow: none;
  }

  &.user {
    img {
      vertical-align: bottom;
    }
    .caret {
      margin-top: 18px;
      margin-left: 8px;
      margin-right: 4px;
    }
    padding: 4px;
  }

  // Button Sizes
  &.large {
    padding: 9px 14px 9px;
    font-size: $baseFontSize;
    line-height: normal;
  }
  &.small {
    padding: 7px 9px 7px;
    font-size: ($baseFontSize - 2px);
  }
  &.mini {
    font-weight: bold;
    padding: 2px 6px;
    font-size: ($baseFontSize - 2px);
    line-height: ($baseLineHeight - 4px);
  }

  &.flat {
    gradientBar(#fff, $grey-9);
    border: 0;
  }

  &.transparent {
    // Reset all the inherited properties that control
    // the 'button-y' appearance
    background: none;
    border: 1px solid transparent;
    box-shadow: none;
    border-radius: 0;
    
    &:hover, &.active {
      border: 1px solid rgba(0,0,0,.25);
    }

    &.danger {
      color: $red-6;
      font-weight: normal;
      text-shadow: none;
    }
  }

  &.square {
    border-radius: 0;
  }

  &.fill {
    text-align: center;
    display: block;
  }

  &.underline { text-decoration: underline !important; }

  &.outline {
    background: none;
    border: 1px solid rgba(0,0,0,.075);
    border-radius: 0;
    &:hover {
      border-color: rgba(0,0,0,.5);
    }
    &.opaque {
      background-color: #fff;
    }
  }

  // Just used to mock up the same sizing/spacing
  &.spacing {
    cursor: text;
    background: none;
    border: 1px solid transparent;
    box-shadow: none;
    border-radius: 0;
  }
}

// Super jank hack for removing border-radius from IE9 so we can keep filter gradients on alerts and buttons
:root .alert-message,
:root .btn {
  border-radius: 0 \0;
}

// Help Firefox not be a jerk about adding extra padding to buttons
button.btn,
input[type=submit].btn {
  &::-moz-focus-inner {
    padding: 0;
    border: 0;
  }
}
