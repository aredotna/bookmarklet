}

.new-channel-settings-submit {
  font-weight: bold;
}

.panel-close {
  display: block;
  padding: ($unit / 4) 0;
  text-align: center;
  font-size: ($baseFontSize - 2);
  line-height: ($baseLineHeight - 2);
  font-weight: bold;
  color: #fff;
  background-color: $grey-4;
  box-shadow: inset 0 5px 5px -5px rgba(0,0,0,.5);
  cursor: pointer;

  &:hover {
    background-color: lighten($grey-4, 5%);
  }

  &.light {
    background-color: $grey-8;
    color: $textColor;

    &:hover {
      background-color: lighten($grey-8, 5%);
    }
  }
}


// DROP ZONE
// ---------

.drop-zone-container {
  box();
  position: relative;
  text-align: center;
  height: 235px;

  box-shadow: inset 0px 0px 15px rgba(0,0,0,.2);
  font-size: 16px;
  font-weight: normal;
  background-color: white;
  color: rgb(145, 145, 145);

  &.ready {
    .instructions { display: block; }
    .status-container { display: none; }
  }

  &.complete {
    .instructions { display: none; }
    .status-container { display: block; }
  }
}

.instructions {
  padding: $unit;
  line-height: 26px;
}

.save-as-page-link {
  display: inline-block;
  padding: 0px 4px;
  color: white;
  background-color: rgb(145, 145, 145);

  &:hover {
    color: white;
    background-color: $activeColor;
  }

  &:active {
    background-color: $activeColor;
  }
}

.status-container {
  box();
  occupy-space();
  color: white;

  .block-status {
    margin-bottom: ($unit / 2);
  }

  .view-on-arena-link {
    padding: 3px 7px;
    color: $droppableColor;
    background-color: white;
  }

  &.success {
    background-color: $droppableColor;

    .status-success { display: block; }
    .status-error { display: none; }
  }

  &.error {
    background-color: $errorColor;

    .status-success { display: none; }
    .status-error { display: block; }    
  }
}

// SIDEBAR LINK
// ------------

.sidebar-item {
  position: relative;
  line-height: 18px;
  border-bottom: 1px solid darken($backgroundGray, 5%);

  .area {
    display: block;
    padding: 15px ($unit / 2);
  }

  &.user .area {
    padding: ($unit / 2);
  }

  // SIDEBAR ITEM CONTENT
  // --------------------
  .item-title,
  .item-meta { display: block; }

  .item-title {
    font-size: $baseFontSize;
    font-weight: bold;
    word-wrap: break-word;
    color: $darkTextColor;
    padding-right: ($unit / 2);

    .username {
      margin-left: ($unit / 2);
      line-height: ($unit * 2);
      vertical-align: middle;
    }
  }

  .item-meta {
    font-size: ($baseFontSize - 2);
    line-height: ($baseLineHeight - 2);
    font-weight: normal;
    color: $lightTextColor;
    
    span { text-transform: lowercase; }
  }

  .item-meta-icons {
    position: absolute;
    display: block;
    // top: 50%;
    // right: 23px;
    // height: 14px; // sprite-height
    // margin-top: -9px; // visual offset
    top: 15px;
    right: 15px;

    i { vertical-align: top; }
  }

  // DRAGGABLE INDICATOR
  // -------------------
  .handle {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: $unit;
    visibility: hidden;
    cursor: move;
  }

  // HOVER STATE
  // -----------
  &:hover {
    background-color: darken($backgroundGray, 5%);
    border-bottom: 1px solid $sidebarBorderColor;

    .area { text-decoration: none; }

    .item-title > .title,
    .username { text-decoration: none; }

    .handle { visibility: visible; }
  }

  // ACTIVE STATE
  // ------------
  &.active {
    background-color: $activeColor !important;
    border-bottom: 1px solid $activeColor;

    .item-title { color: #fff; }
    .item-meta { color: white; }
    .item-timestamp { color: #adc6ee; }
  }

  // DROPPABLE INDICATION
  // --------------------
  &.droppable-hover {
    background-color: $droppableColor;
    
    .item-title,
    .item-meta { color: #fff; }
  }

  // CONNECTING DROP STATE
  // ---------------------
  &.drop-loading {
    loading($droppableColor);

    .item-title,
    .item-meta { color: #fff; }
  }

  // LOADING STATE
  // -------------
  &.loading,
  &.highlight.loading,
  &.loading:hover,
  &.highlight.loading:hover {
    loading($droppableColor);

    .item-title,
    .item-meta { color: #fff; }
  }
}


// LOGIN SCREEN
// ------------

.bookmarklet #login {
  margin-top: 18px;
  padding: 10px;
  overflow-y: auto;

  .logo {
    text-align: center;
    padding-top: 10px;
    padding-bottom: 20px;
  }

  .btn {
    gradientBar($blue-4, $blue-3);
  }

  .forgot a {
    font-size: 11px;
    color: $grey-6;
  }

  .close-marklet {
    position: fixed;
    top: 1px;
    right: 5px;
  }
}