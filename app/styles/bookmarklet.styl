@import "nib"
@import "variables"
@import "mixins"

// DEFAULTS
// --------

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  background: $backgroundGray;
  color: $darkTextColor;
  font-size: 13px;
  line-height: 22px;
  font-weight: bold;
  font-family: "Helvetica Neue", "Helvetica", Arial, sans-serif;
}

a {
  color: inherit;
  text-decoration: none;
  cursor: pointer;

  &:hover {
    color: inherit;
  }
}

input {
  border: 0;
  outline: 0;
  box-shadow: none;
  background: transparent;
  font: inherit;
  
  &:focus {
    outline: none;
  }
}

ul {
  padding: 0;
  margin: 0 !important;
}

li {
  list-style: none;
}

placeholder(inherit);

.bar-box {
  float: left;
  width: $searchQueryHeight;
  line-height: $searchQueryHeight;
  text-align: center;
  background-color: $backgroundGray;
  border-left: 1px solid $sidebarBorderColor;
}



// MAIN
// ----

#bookmarklet {
  width: 100%;
  height: auto;
}


// SEARCH
// ------

.search-container {
  background: rgb(226, 226, 226);
  height: ($unit * 2);
  padding-right: ($unit * 2);


  .search-query {
    display: block;
    height: 100%;
    width: 100%;
    margin: 0;
    padding-left: ($unit * 2);
    border: 0;
    border-right: 1px solid darken($borderColor, 5%);
    background: no-repeat 14px center;
    background-image: url('/images/interface/search-dark.png');
    color: #4b4b4b;
    font-weight: normal;
    transition: background-color .125s
    box-shadow: none;

    &:focus {
      background-color: darken(rgb(226, 226, 226), 5%)
      border-right: 1px solid darken($borderColor, 5%);
      color: inherit;
    }

    &.loading {
      loading(rgb(226, 226, 226));
    }
  }

  .dropdown-menu {
    position: absolute;
    width: 100%;
    max-width: none;
    z-index: 1;
    background: $backgroundGray;
    padding: 0;
    border: 0;
  }
}

.new-channel-form-toggle {
  display: block;
  position: absolute;
  top: 0;
  right: 0;
  width: ($unit * 2);
  height: ($unit * 2);
  background: url('/images/interface/compose.png') center center no-repeat

  &:hover {
    background-color: darken(rgb(226, 226, 226), 5%)
  }
}


// NEW CHANNEL
// -----------

.new-channel-form-container {
  position: absolute;
  left: 0;
  top: ($unit * 2);
  width: 100%;
  min-height: $unit;
  max-height: $sidebarWidth;
  z-index: $zindexFixedSidebar;
  background: #E7E7E7;
}

.new-channel-form-toggle {
  transition: background-color 0.25s;

  &:hover {
    background-color: $sidebarHeaderBackgroundColor;
  }
}

.new-channel-container {
  &.active {
    background-color: $sidebarHeaderBackgroundColor;
  }  
}

.new-channel-form-container {
  background: rgb(226, 226, 226);
  border-top: 1px solid #dcdcdc;
  box-shadow: inset 0 1px 0 #fff;

  .header{
    line-height: ($baseLineHeight + 4);
    padding-bottom: ($unit / 2);
    font-weight: bold;
    color: $textColor;
  }
}

.new-channel-inner {
  padding: ($unit / 2);
}

.new-channel-settings {
  &, input { 
    margin: 0; 
  }

  input, .btn {
    border: 1px solid rgba(0,0,0,.075) !important;
  }

  // OVERRIDE SINCE WE ARE REUSING THE
  // SAME PRIVACY SELECTOR AS USED IN
  // THE CHANNEL HEADER
  // ---------------------------------
  .visibility-selector { font-size: $baseFontSize; }

  input[type=text] { background-color: white; }

  input[type=submit] {
    box-shadow: none;
    font-weight: bold;
  }
}

.new-channel-settings-state {
  width: 100%;
  margin: ($unit / 2) 0;

  .btn {
    width: 100%;

    .caret { float: right; }
    
    // copied from buttons.styl
    border: 1px solid rgba(0,0,0,0.075);

    &:hover { border-color: rgba(0,0,0,0.5); }
  }
}

