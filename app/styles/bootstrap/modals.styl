@import "nib"
@import "../variables"
@import "../mixins"

// MODALS
// ------
.modal-backdrop {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: $zindexModalBackdrop;
  background-color: #fff;
  
  // Fade for backdrop
  &.fade { opacity: 0; }
}

.modal-backdrop,
.modal-backdrop.fade.in {
  opacity: 0.8;
}

.modal {
  position: fixed;
  top: 50%;
  left: 50%;
  z-index: $zindexModal;
  max-height: 570px;
  overflow: auto;
  width: 560px;
  margin: -250px 0 0 -280px;
  background-color: #fff;
  border: 1px solid #ccc;
  border: 1px solid rgba(0,0,0,.1);
  *border: 1px solid #ccc; // IE6-7
  box-shadow: 0 0 4px rgba(0,105,214,.25);
  background-clip: padding-box;

  &.fade {
    transition: opacity 0.3s linear;
    top: -25%;
  }

  &.fade.in { top: 50%; }

  // Override so that modal footer doesn't have an 
  // margin when we wrap the submit in a form
  form { margin: 0; }
  
  .alert { margin-top: 0; }
}

.modal-header {
  padding: 5px 15px;
  min-height: $baseLineHeight;
  
  // Close icon
  .close { margin-top: 7px; }

  h3 {
    margin: 5px 0;
    text-align: center;
    font-size: ($baseFontSize - 2);
    line-height: $baseLineHeight;
    text-transform: uppercase;
  }
}

.modal-body {
  padding: 15px;
}

.modal-footer {
  margin: 0;
  background-color: #f5f5f5;
  border-top: 1px solid #ddd;
  border-radius: 0 0 6px 6px;
  box-shadow: inset 0 1px 0 #fff;
  clearfix();

  .btn { margin: 0; }
}
