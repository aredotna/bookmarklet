@import "nib"
@import "../variables"
@import "../mixins"

// CLOSE
// -----
.close {
  float: right;
  font-size: 20px;
  font-weight: bold;
  line-height: 12px;
  color: #000;
  text-shadow: 0 1px 0 rgba(255, 255, 255, 1);
  opacity: 0.2;
  
  &:hover {
    color: #000;
    text-decoration: none;
    opacity: 0.4;
    cursor: pointer;
  }

  &.inline {
    float: none;
  }
}

.close-inverse {
  color: #fff;
  text-shadow: 0 1px 0 rgba(0, 0, 0, 1);
  opacity: 0.8;
}